@page
@model AccountHolderList.Pages.AccountHolders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="font-size: 32px; color: #2638ed; font-weight: bold;">Account Holder List</h1>

<p>
    <a asp-page="Create">Create a New Account Holder</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountHolder[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountHolder[0].MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountHolder[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountHolder[0].SSN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountHolder[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountHolder[0].PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AccountHolder) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SSN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
