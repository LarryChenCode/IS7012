@page
@model RecruitCatChen4co.Pages.OurTeamModel
@{
    ViewData["Title"] = "Our Team";
}

<h2 class="text-center my-4">Meet Our Team</h2>

<div class="container">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <img src="~/images/bio_photo.png" class="card-img-top rounded-circle mt-3 mx-auto d-block" alt="Larry Chen's phtot" style="width: 150px; height: 150px; object-fit: cover;">
                <div class="card-body text-center">
                    <h5 class="card-title">Larry Chen</h5>
                    <p class="card-text">
                        <strong>Founder & CEO</strong><br>
                        Larry's vision and leadership have helped RecruitCat become a leading recruitment agency in the US.
                        </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <img src="~/images/sr-recruiter-ot.png" class="card-img-top rounded-circle mt-3 mx-auto d-block" alt="Olivia Thompson's phtot" style="width: 150px; height: 150px; object-fit: cover;">
                <div class="card-body text-center">
                    <h5 class="card-title">Olivia Thompson</h5>
                    <p class="card-text">
                        <strong>Co-Founder & Sr. Recruiter</strong><br>
                        With over a decade of experience, Olivia has a keen eye for talent and a passion for helping others succeed.
                        </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <img src="~/images/recruiter-ms.png" class="card-img-top rounded-circle mt-3 mx-auto d-block" alt="Mike Smith's phtot" style="width: 150px; height: 150px; object-fit: cover;">
                <div class="card-body text-center">
                    <h5 class="card-title">Mike Smith</h5>
                    <p class="card-text">
                        <strong>Recruiter - IT & Finance</strong><br>
                        Mike always goes the extra mile to find the perfect match between candidates and companies.
                        </p>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .card {
        background-color: #eff5fc;
        transition: transform 0.3s;
    }
    .card:hover {
        transform: scale(1.05);
    }
    .rounded-circle {
        border: 4px solid #f0f0f0;
    }
    .card-title {
        font-weight: bold;
    }
    .card-body {
        padding: 20px;
    }
</style>